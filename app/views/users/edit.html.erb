<div class="container">
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row mx-2">
    <h2>会員情報編集</h2>
  </div>
  <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
    <div class="border rounded px-2 my-2">
      <p class="font-weight-bold"><%= f.label :name, "ユーザーネーム" %></p>
      <p><%= f.text_field :name %></p>
    </div>
    <div class="border rounded px-2 my-2">
      <p class="font-weight-bold"><%= f.label :email, "メールアドレス" %></p>
      <p><%= f.text_field :email %></p>
    </div>
    <%= f.submit "更新" %>
  <% end %>
</div>