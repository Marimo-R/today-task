<div class="container">
  <% if @category.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= @category.errors.count %>件のエラーが発生しました
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row mx-2">
    <h2>カテゴリー編集</h2>
  </div>
  <div class="mt-5">
    <%= form_with model: @category, url: category_path(@category.id), method: :patch do |f| %>
      <%= f.text_field :category %>
      <%= f.submit "更新" %>
    <% end %>
  </div>
</div>