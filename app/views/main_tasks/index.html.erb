  <div class="mb-2">
      <h2>
        <% if params[:today].present? %>
          <%= @user.name %>Todaya's Task
        <% else %>
          <%= @user.name %>さんのタスク一覧
      <% end %>
      </h2>
    </div>
  <div class="align-middle">
  <% if @main_tasks.present? %>
    <table class="table table-bordered table-sm align-middle">
      <thead class="table-dark text-center align-middle">
        <tr>
          <th></th>
          <th>タスク</th>
          <th>カテゴリ</th>
          <th>期日</th>
          <th>ステータス</th>
          <% if params[:user_id].to_i == current_user.id %>
            <th>完了ボタン</th>
            <th>削除ボタン</th>
            <th>Todayに追加ボタン</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @main_tasks.each do |main_task| %>
          <tr class="table-secondary">
            <!--一列目-->
            <% if main_task.sub_tasks.present? %>
              <td class="align-middle">
                <a data-toggle="collapse" href="#collapse_<%= main_task.id %>">▼</a>
              </td>
              <% else %>
              <td></td>
            <% end %>
            <!--二列目-->
            <td class="align-middle"><%= link_to main_task.main_task, user_main_task_path(main_task.user_id, main_task.id) %></td>
            <!--三列目-->
            <td class="align-middle"><%= main_task.category.category %></td>
            <!--四列目-->
            <% if main_task.due_date.present? %>
              <td class="align-middle"><%= main_task.due_date.strftime('%Y年%m月%d日') %></td>
            <% else %>
              <td>なし</td>
            <% end %>
            <!--五列目-->
            <% if main_task.status == "incomplete" %>
              <td class="text-center align-middle"><div class="border rounded bg-danger"><%= MainTask.statuses_i18n[main_task.status] %></div></td>
            <% elsif main_task.status == "done" %>
              <td class="text-center align-middle"><div class="border rounded bg-success"><%= MainTask.statuses_i18n[main_task.status] %></div></td>
            <% elsif main_task.status == "deleted" %>
              <td class="text-center align-middle"><div class="border rounded bg-secondary"><%= MainTask.statuses_i18n[main_task.status] %></div></td>
            <% end %>
            <!--六列目-->
            <!-- メインタスク-ステータスの更新ボタン
                 未完の時→完了, 完了の時→未完に戻す, 削除済みの時→完了に戻すが表示される -->
            <% if params[:user_id].to_i == current_user.id %>
              <% if main_task.status == "incomplete" %>
                <td class="text-center align-middle"><%= link_to "完了",
                task_status_to_done_path(main_task.user.id, main_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch, class: "btn-sm btn-link" %></td>
              <% elsif main_task.status == "done" %>
                <td class="text-center align-middle"><%= link_to "未完に戻す", task_status_to_incomplete_path(main_task.user.id, main_task.id, status: params[:status], catergory: params[:category], order: params[:order], today: params[:today]), method: :patch, class: "btn-sm btn-link" %></td>
              <% elsif main_task.status == "deleted" %>
                <td class="text-center align-middle"><%= link_to "完了に戻す", task_status_to_done_path(main_task.user.id, main_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch, class: "btn-sm btn-link" %></td>
              <% end %>
              <!--七列目-->
              <td class="text-center align-middle"><%= link_to "削除", user_main_task_path(main_task.user_id, main_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :delete, class: "btn-sm btn-link" %></td>
              <!--八列目-->
              <% if main_task.is_today_task == false %>
                <td class="text-center align-middle"><%= link_to "Todayに追加", add_today_path(main_task.user.id, main_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch, class: "btn-sm btn-link" %></td>
              <% elsif main_task.is_today_task == true %>
                <td class="text-center align-middle">♥<%= link_to "Todayから削除", remove_today_path(main_task.user.id, main_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch, class: "btn-sm btn-link" %></td>
              <% end %>
            <% end %>
          </tr>
            <% sub_tasks = main_task.sub_tasks %>
            <% if params[:today].present? %>
              <% sub_tasks = sub_tasks.where(is_today_task: true) %>
            <% end %>
            <% sub_tasks.each do |sub_task| %>
              <tr id="collapse_<%= sub_task.main_task.id %>" class="collapse show">
                <!--一列目-->
                <td class="align-middle"></td>
                <!--二列目-->
                <td class="align-middle"><%= link_to sub_task.sub_task, sub_task_path(sub_task.id) %></td>
                <!--三列目-->
                <td class="align-middle"></td>
                <!--四列目-->
                <% if sub_task.due_date.present? %>
                  <td class="align-middle"><%= sub_task.due_date.strftime('%Y年%m月%d日') %></td>
                <% else %>
                  <td class="align-middle">なし</td>
                <% end %>
                <!--五列目-->
                <% if sub_task.status == "incomplete" %>
                  <td class="text-center align-middle"><div class="border rounded bg-danger"><%= SubTask.statuses_i18n[sub_task.status] %></div></td>
                <% elsif sub_task.status == "done" %>
                  <td class="text-center align-middle"><div class="border rounded bg-success"><%= SubTask.statuses_i18n[sub_task.status] %></div></td>
                <% elsif sub_task.status == "deleted" %>
                  <td class="text-center align-middle"><div class="border rounded bg-secondary"><%= SubTask.statuses_i18n[sub_task.status] %></div></td>
                <% end %>
                <!--六列目-->
                <!-- メインタスク-ステータスの更新ボタン
                 未完の時→完了, 完了の時→未完に戻す, 削除済みの時→完了に戻すが表示される -->
                <% if params[:user_id].to_i == current_user.id %>
                  <% if sub_task.status == "incomplete" %>
                    <td class="text-center align-middle"><%= link_to "完了", sub_task_status_to_done_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch , class: "btn-sm btn-link"%></td>
                  <% elsif sub_task.status == "done" %>
                    <td class="text-center align-middle"><%= link_to "未完に戻す", sub_task_status_to_incomplete_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch , class: "btn-sm btn-link"%></td>
                  <% elsif sub_task.status == "deleted" %>
                    <td class="text-center align-middle"><%= link_to "完了に戻す", sub_task_status_to_done_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch , class: "btn-sm btn-link"%></td>
                  <% end %>
                  <!--七列目-->
                  <td class="text-center align-middle"><%= link_to "削除", sub_task_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :delete , class: "btn-sm btn-link"%></td>
                  <!--八列目-->
                  <% if sub_task.is_today_task == false %>
                    <td class="text-center align-middle"><%= link_to "Todayに追加", sub_add_today_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch , class: "btn-sm btn-link"%></td>
                  <% elsif sub_task.is_today_task == true %>
                    <td class="text-center align-middle">♥<%= link_to "Todayから削除", sub_remove_today_path(sub_task.id, status: params[:status], category: params[:category], order: params[:order], today: params[:today]), method: :patch , class: "btn-sm btn-link"%></td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>タスクが存在しません</p>
  <% end %>
  </div>
</div>